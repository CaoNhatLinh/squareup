{
  "rules": {
    "orders": {
      ".indexOn": ["sessionId", "restaurantId", "createdAt"],
      "$orderId": {
        ".read": true,
        ".write": true
      }
    },
    "restaurants": {
      ".indexOn": ["name", "createdAt"],
      "$restaurantId": {
        ".read": true,
        ".write": true,
        "orders": {
          ".indexOn": ["createdAt", "status"],
          "$orderId": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    "categories": {
      "$restaurantId": {
        ".indexOn": ["displayOrder", "name"],
        ".read": true,
        ".write": true
      }
    },
    "items": {
      "$restaurantId": {
        ".indexOn": ["name", "categoryId"],
        ".read": true,
        ".write": true
      }
    },
    "modifiers": {
      "$restaurantId": {
        ".read": true,
        ".write": true
      }
    },
    "users": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    }
  }
}
